@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>

<div class="container mt-5">
    <h2>Lung Cancer Prediction</h2>

    <form method="post" action="@Url.Action("InvokeAndDisplayResult", "Home")">
        <div class="form-group">
            <label for="gender">Gender:</label>
            <select id="gender" name="gender" class="form-control">
                <option value="M">Male</option>
                <option value="F">Female</option>
            </select>
        </div>

        <div class="form-group">
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" min="1" max="100" required class="form-control">
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="smoking">Smoking:</label>
                <input type="checkbox" id="smoking" name="smoking" value="true">
            </div>

            <div class="form-group col-md-6">
                <label for="yellowFingers">Yellow Fingers:</label>
                <input type="checkbox" id="yellowFingers" name="yellowFingers" value="true">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="anxiety">Anxiety:</label>
                <input type="checkbox" id="anxiety" name="anxiety" value="true">
            </div>

            <div class="form-group col-md-6">
                <label for="peerPressure">Peer Pressure:</label>
                <input type="checkbox" id="peerPressure" name="peerPressure" value="true">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="chronicDisease">Chronic Disease:</label>
                <input type="checkbox" id="chronicDisease" name="chronicDisease" value="true">
            </div>

            <div class="form-group col-md-6">
                <label for="fatigue">Fatigue:</label>
                <input type="checkbox" id="fatigue" name="fatigue" value="true">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="allergy">Allergy:</label>
                <input type="checkbox" id="allergy" name="allergy" value="true">
            </div>

            <div class="form-group col-md-6">
                <label for="wheezing">Wheezing:</label>
                <input type="checkbox" id="wheezing" name="wheezing" value="true">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="alcoholConsuming">Alcohol Consuming:</label>
                <input type="checkbox" id="alcoholConsuming" name="alcoholConsuming" value="true">
            </div>

            <div class="form-group col-md-6">
                <label for="coughing">Coughing:</label>
                <input type="checkbox" id="coughing" name="coughing" value="true">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="shortnessOfBreath">Shortness of Breath:</label>
                <input type="checkbox" id="shortnessOfBreath" name="shortnessOfBreath" value="true">
            </div>

            <div class="form-group col-md-6">
                <label for="swallowingDifficulty">Swallowing Difficulty:</label>
                <input type="checkbox" id="swallowingDifficulty" name="swallowingDifficulty" value="true">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="chestPain">Chest Pain:</label>
                <input type="checkbox" id="chestPain" name="chestPain" value="true">
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.PredictionMessage))
    {
        <p class="mt-3">@ViewBag.PredictionMessage</p>
    }
</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</body>
</html>